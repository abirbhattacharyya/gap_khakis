<% product = capsule %>
<%
  @accepted_offer = product.offers.last(:conditions => ["ip = ? and (response = ? OR response = ?)", request.remote_ip, 'accepted', 'paid'])
  @accepted = (@accepted_offer.nil? ? false: true)
  @counter_offer = product.offers.last(:conditions => ["ip = ? and response = ?", request.remote_ip, 'counter'])
  @new_price = @counter_offer.price if @counter_offer
  @counter = (@counter_offer ? true : false)
  @last_offer = (@counter_offer ? true : false)
%>

<div class="capsule2">
    <div class="cinner">
        <h4><%= product.style_description.titleize %> (<%= product.color.titleize %>)</h4>
        <h5><%= product.description[0] %></h5>

        <div class="view">
            <span class="preview">
                <%#= image_tag((product.image_url || "/images/khakis.png"), :size => "215x290") %>
                <%#= link_to(content_tag(:span, nil, :class => "play"), (product.image_url || "/images/khakis.png"), :title => "#{product.style_description} (#{product.color_description})", :rel => "lightbox[#{product.style_description.titleize.titleize.gsub(/\s+/, '')}]") %>
                <%= link_to(image_tag((product.image_url || "/images/khakis.png"), :size => "215x290"), (product.image_url || "/images/khakis.png"), :title => "#{product.style_description.titleize} (#{product.color_description.titleize})", :rel => "lightbox[#{product.style_description.titleize.gsub(/\s+/, '')}]") %>
                <div style="display: none">
                    <% for product_image in product.images %>
                    <%= link_to(content_tag(:span, nil, :class => "play"), (product_image.image_url || "/images/khakis.png"), :title => "#{product_image.style_description.titleize} (#{product_image.color_description.titleize})", :rel => "lightbox['#{product.style_description.titleize.gsub(/\s+/, '')}']") %>
                    <% end %>
                </div>
            </span>
            <p>
                Share:
                <%= link_to(image_tag("/images/icons/twitter-18x18px.gif", :size => "15x14", :alt => "Twitter", :title => "Twitter"), "http://twitter.com/home?status=I just scored a sweet deal on Gap khakis! You can too. Say your price now at www.gapmyprice.com", :target => "_new") %>
                <%= link_to(image_tag("/images/icons/facebook-18x18px.gif", :size => "15x14", :alt => "Facebook", :title => "Facebook"), "http://www.facebook.com/sharer.php?u=#{root_url}&t=Say your price", :target => "_new") %>
                <%#= link_to(image_tag("/images/icons/email-18x18px.gif", :size => "15x14", :alt => "Email", :title => "Email"), send_to_path(product.id)) %>
            </p>
        </div><!-- .view -->

        <div class="info">
            <div class="ctrl-box">
                <div class="sinner">

                  <% if logged_in? and product.user == current_user %>
                      <% form_tag capsule_path(product.id), :id => "submit_form" do %>
                      <h2>Total Price= $<%= number_with_delimiter(product.ticketed_retail) %></h2>
                      <p>
                          <label>Your offer?</label>
                          <%= text_field_tag :price, '', :class => "w120px", :maxLength => 2, :onKeyPress => "return keyAllowed(event,'0123456789')", :onblur => "this.value=removeChars(this.value)" %>
                      </p>
                      <p>
                          <span class="button-green-ctrl-fat disabled"><input type="submit" name="" value="Say Your Price!" disabled="disabled"></span>
                      </p>
                      <% end %>
                  <% else %>
                      <% if @accepted_offer %>
                          <% form_tag payments_path(@accepted_offer.id) do %>
                              <h2>Your Price: <%= (@accepted_offer.price.ceil > 0) ? "$" + number_with_delimiter(@accepted_offer.price.ceil) : "Free of cost" %></h2>
                              <p class="ctrls">
                                <span class="button-green-ctrl-fat"><%= submit_tag "Get Coupon!" %></span>
                              </p>
                          <% end %>
                      <% else %>
                          <% form_tag capsule_path(product.id), :id => "submit_form" do %>
                              <%= hidden_field_tag(:submit_button, "counter") %>
                              <% if @counter %>
                                <h2 class="long">Best Offer : <%= (@new_price.ceil > 0) ? "$" + number_with_delimiter(@new_price.ceil) : "Free of cost" %></h2>
                                <p class="ctrl">
                                    <label>Accept the deal?</label>
                                    <span class="button-green-ctrl"><%= button_to_function("Yes", "var f = document.forms['submit_form'];$('submit_button').value='yes';f.submit();return false;") %></span>
                                    <span class="button-red-ctrl"><%= button_to_function("No", "var f = document.forms['submit_form'];$('submit_button').value='no';f.submit();return false;") %></span>
                                </p>
                                <% if @last_offer == false %>
                                
                                <p>
                                    <label>OR Your Counter Offer?</label>
                                    <%= text_field_tag :price, '', :class => "w120px", :maxLength => 2, :onKeyPress => "return keyAllowed(event,'0123456789')", :onblur => "this.value=removeChars(this.value)" %>
                                </p>
                                <p>
                                  <span class="button-orange-ctrl-fat"><%= submit_tag "Counter" %></span>
                                </p>
                                <% end %>
                              <% else %>
                                <h2>Say Your Price</h2>

                                <p class="ctrl">
                                    <label>Make an offer?</label>
                                    <%= text_field_tag :price, '', :class => "w120px", :maxLength => 2, :onKeyPress => "return keyAllowed(event,'0123456789')", :onblur => "this.value=removeChars(this.value)" %>
                                </p>
                                <p class="ctrls">
                                    <span class="button-green-ctrl-fat"><%= submit_tag "Go!" %></span>
                                </p>
                              <% end %>
                          <% end %>
                        <% end %>
                  <% end %>

                </div><!-- .sinner -->
                <div class="stl"></div><div class="str"></div>
                <div class="sbl"></div><div class="sbr"></div>
            </div><!-- .sbox -->

            <div class="divider"></div>

            <p><%= "Regular Price : " + number_to_currency(product.ticketed_retail.ceil, :precision => 0) %></p>
            <div>
                <%= product.description[1] %>
                <%#= link_to("More Info", "javascript:void();", :class => "more") %>
            </div>
            <p><%= link_to(capsule_url(product.id), capsule_path(product.id), :class => "myprice") %></p>
        </div><!-- .info -->
    </div><!-- .cinner -->
    <div class="ctl"></div><div class="ctc"></div><div class="ctr"></div>
    <div class="cml"></div><div class="cmr"></div>
    <div class="cbl"></div><div class="cbc"></div><div class="cbr"></div>
</div><!-- .capsule -->
