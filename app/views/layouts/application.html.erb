<!DOCTYPE HTML PUBLIC "-//W3C//DTD HTML 4.01 Transitional//EN" "http://www.w3.org/TR/html4/loose.dtd">

<html>
  <head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta http-equiv="Content-Language" content="en-us" />
    <meta name="keywords" content="" />
    <meta name="author" content="" />
    <meta name="description" content="">
    <link rel="icon"  type="image/png" href="/images/favicon.ico" />
    <link rel="shortcut icon" href="/images/favicon.ico" type="image/x-icon">

    <title>Choose to say your price!</title>
    <%= stylesheet_link_tag "reset", "global", "notification", "lightbox" %>
    <%#= javascript_include_tag "prototype", "effects", "lightbox", "scriptaculous.js?load=effects,builder" %>
    <script src="/javascripts/prototype.js" type="text/javascript"></script>
    <script src="/javascripts/scriptaculous.js?load=effects,builder" type="text/javascript"></script>
    <script src="/javascripts/lightbox.js" type="text/javascript"></script>
    <%= javascript_include_tag 'application', 'jquery-1.4.2', 'jquery.bar' %>
    <%= javascript_include_tag "jcarousellite_1.0.1c4" %>

    <% javascript_tag do %>
          jQuery.noConflict();
          jQuery(function() {
                jQuery("#newsticker-jcarousellite").jCarouselLite({
                btnPlay: ".play",
                btnPause: ".pause",
                vertical: true,
                hoverPause:true,
                stop: false,
                visible: 3,
                auto:2000,
                speed:2300
                });
          });
    <% end %>

    <%= include_visualization_api %>
    <%= yield :head %>
  </head>

  <body>
    <%= content_tag(:div, nil, :id => "notification", :class => "message-notification") %>
    <div id="layout">
        <div id="header">
            <a class="logo" href="/">GAP</a>
            <ul>
                <%= content_tag(:li, link_to('Home', root_path)) if request.path != root_path %>
                <% if logged_in? %>
                    <%#= content_tag(:li, link_to("My Profile", profile_path), :class => ([profile_path].include? request.path) ? "current" : nil) if current_user.profile %>
                    <%= content_tag(:li, link_to('Sign Out', logout_path)) %>
                <% else %>
                    <%= content_tag(:li, link_to("Say Your Price", say_your_price_path), :class => ([say_your_price_path].include? request.path) ? "current" : nil) %>
                    <%= content_tag(:li, link_to("Winners", winners_path), :class => ([winners_path].include? request.path) ? "current" : nil) %>
                <% end %>
            </ul>
        </div><!-- #header -->

        <% content_tag :div, :id => "content" do %>
            <%= @content_for_layout %>
        <% end %>

        <div id="footer">
            <div class="copyright">&copy; 2011 Gap Inc. engine by Dealkat</div>
            <% content_tag :ul do %>
                <%  if logged_in? %>
                  <%= content_tag(:li, link_to("Edit Profile", profile_path), :class => ([profile_path].include? request.path) ? "current" : nil) if current_user.profile %>
                  <%= content_tag(:li, link_to("Download", download_emails_path)) if Payment.count(:conditions => "email IS NOT NULL and email <> ''").to_i > 0 %>
                <% else %>
                  <%= content_tag(:li, link_to("FAQ", faqs_path), :class => ([faqs_path].include? request.path) ? "current" : nil) %>
                <% end %>
            <% end %>
            <% if Profile.first %>
              <address>
                  <%#= "#{Profile.first.name} " %>
                  <%#= "#{Profile.first.address.strip}; " %>
                  <%= number_to_phone(Profile.first.phone, :delimiter => "-") + "; " %>
                  <%= auto_link(Profile.first.email) + "; "%>
                  <%#= "@#{link_to("#{Profile.first.twitter} ", Profile.first.twitter_url, :target => "_new")} " %>
              </address>
            <% end %>
        </div><!-- #footer -->
    </div><!-- #layout -->
    <% if flash[:error] or flash[:notice] %>
      <% javascript_tag do %>
          <% if flash[:error] %>
            showNotification("<%= flash.now[:error] %>", 'error', 10000);
          <% elsif flash[:notice] %>
            showNotification("<%= flash.now[:notice] %>", 'notice', 10000);
          <% end %>
          <% flash.discard %>
      <% end %>
    <% end %>

    <script type="text/javascript" charset="utf-8">
        window._token = '<%= form_authenticity_token -%>';
    </script>

    <script type="text/javascript">
    var gaJsHost = (("https:" == document.location.protocol) ? "https://ssl." : "http://www.");
    document.write(unescape("%3Cscript src='" + gaJsHost + "google-analytics.com/ga.js' type='text/javascript'%3E%3C/script%3E"));
    </script>
    <script type="text/javascript">
    try {
    var pageTracker = _gat._getTracker("UA-15390967-1");
    pageTracker._trackPageview();
    } catch(err) {}</script>
  </body>
</html>