<% if @products and @products.size > 0 %>
  <% form_tag say_your_price_path, :id => "page_form", :style => "display:none;" do %>
    <%= hidden_field_tag(:page, @page) %>
  <% end %>

  <div class="paginator w650px" style="display: none">
      <% if @page.to_i != @post_pages %>
              <% if(@page.to_i <= 1)%>
                  <%#= link_to("Next #{@per_page}", "javascript:void();", :class => "button next", :onclick => "alert(document.getElementById('page').value);") %>
                  <%#= link_to("Next #{@per_page}", "javascript:void();", :class => "button next", :onclick => "alert($('page').value);") %>
                  <%#= link_to("Next #{@per_page}", "javascript:void();", :class => "button next", :onclick => "alert(jQuery('#page').attr('value'));") %>
                  <%= link_to("Next #{@per_page}", "javascript:void();", :class => "button next", :onclick => "var f = document.forms['page_form'];$('page').value=2;f.submit();return false;") %>
              <% else %>
                  <%= link_to("Prev #{@per_page}", "javascript:void();", :class => "button prev", :onclick => "var f = document.forms['page_form'];$('page').value=#{@page.to_i-1};f.submit();return false;") %>
                  <%= link_to("Next #{@per_page}", "javascript:void();", :class => "button next", :onclick => "var f = document.forms['page_form'];$('page').value=#{@page.to_i+1};f.submit();return false;") %>
              <% end %>
      <% elsif @page.to_i > 1 %>
              <%= link_to("Prev #{@per_page}", "javascript:void();", :class => "button prev", :onclick => "var f = document.forms['page_form'];$('page').value=#{@page.to_i-1};f.submit();return false;") %>
      <% end -%>
  </div>

  <% for product in @products %>
    <div class="columns">
        <div class="column widest">
          <%= render :partial => "partials/capsule", :object => product %>
        </div><!-- .column.wide -->
    </div><!-- .columns -->
  <% end %>

  <div class="paginator w650px" style="display: none">
      <% if @page.to_i != @post_pages %>
              <% if(@page.to_i <= 1)%>
                  <%= link_to("Next #{@per_page}", "javascript:void();", :class => "button next", :onclick => "var f = document.forms['page_form'];$('page').value=2;f.submit();return false;") %>
              <% else %>
                  <%= link_to("Prev #{@per_page}", "javascript:void();", :class => "button prev", :onclick => "var f = document.forms['page_form'];$('page').value=#{@page.to_i-1};f.submit();return false;") %>
                  <%= link_to("Next #{@per_page}", "javascript:void();", :class => "button next", :onclick => "var f = document.forms['page_form'];$('page').value=#{@page.to_i+1};f.submit();return false;") %>
              <% end %>
      <% elsif @page.to_i > 1 %>
              <%= link_to("Prev #{@per_page}", "javascript:void();", :class => "button prev", :onclick => "var f = document.forms['page_form'];$('page').value=#{@page.to_i-1};f.submit();return false;") %>
      <% end -%>
  </div>
<% else %>
  <div style="height: 200px;"></div>
<% end %>
